<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".alarm.misc.ui.ShowAllAlarmsFragment"
    android:background="@color/pitchWhite">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="All Alarms"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/colorPrimaryDarkOrange"
            android:layout_marginTop="16dp"
            android:layout_marginStart="24dp"/>

        <com.hendraanggrian.recyclerview.widget.ExpandableRecyclerView
            android:layout_marginTop="8dp"
            android:id="@+id/rvAlarms"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </LinearLayout>

</FrameLayout>