<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appIntroBg"
    tools:context=".activities.AppIntroActivity">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/appIntroPanelsColor"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/marginTopVeryLarge"
            android:gravity="center"
            android:padding="@dimen/paddingAll"
            android:text="Welcome to Universal Alarm"
            android:textColor="@color/primaryTextColor"
            android:textSize="@dimen/headerTextSize"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/paddingAll"
            android:text="Get notified about new stuff, or turn notifications off"
            android:textColor="@color/secondaryTextColor"
            android:textSize="@dimen/normalTextSize" />

    </LinearLayout>

    <ImageView
        android:id="@+id/ivPreview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
        app:srcCompat="@drawable/intro_sneak_peak" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/appIntroPanelsColor"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/marginTopEndBottomStart"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/paddingAll"
            android:paddingRight="@dimen/paddingAll">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_tick" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/paddingAll"
                android:text="See the latest ROMs"
                android:textColor="@color/primaryTextColor"
                android:textSize="@dimen/normalTextSize" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/marginTopEndBottomStart"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/paddingAll"
            android:paddingRight="@dimen/paddingAll">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_tick" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/paddingAll"
                android:text="Full Material Design, ad free and fat(af)"
                android:textColor="@color/primaryTextColor"
                android:textSize="@dimen/normalTextSize" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/marginTopEndBottomStart"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/paddingAll"
            android:paddingRight="@dimen/paddingAll">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_tick" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/paddingAll"
                android:text="Get notified about new stuff, or turn notifications off"
                android:textColor="@color/primaryTextColor"
                android:textSize="@dimen/normalTextSize" />

        </LinearLayout>

        <Button
            android:id="@+id/btGotIt"
            android:layout_width="@dimen/btWidth"
            android:layout_height="@dimen/btHeight"
            android:layout_gravity="center"
            android:textSize="@dimen/normalTextSize"
            android:layout_marginTop="@dimen/marginTopEndBottomStartLarge"
            android:layout_marginBottom="@dimen/marginTopEndBottomStart"
            android:background="@drawable/button_border"
            android:text="Got It"
            android:textColor="@color/primaryTextColor"
            app:layout_constraintBottom_toBottomOf="@+id/linearLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>