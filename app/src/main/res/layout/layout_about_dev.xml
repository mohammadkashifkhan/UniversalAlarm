<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/pitchWhite"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:scaleType="centerCrop"
            android:id="@+id/ivDevBlurryImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <com.pkmmte.view.CircularImageView
            android:layout_margin="50dp"
            android:layout_gravity="center"
            android:id="@+id/avatar"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="center"
            android:src="@drawable/ic_kashif"
            app:border="true"
            app:border_width="0.1dp" />

    </FrameLayout>

    <TextView
        android:id="@+id/madeWithLove"
        android:gravity="center"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginLeft="@dimen/d_20dp"
        android:layout_marginRight="@dimen/d_20dp"
        android:layout_marginTop="16sp"
        android:gravity="center"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/aboutDevSummary"/>

    <LinearLayout
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:id="@+id/linkedin"
            android:layout_weight=".1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_linkedin"/>

        <ImageView
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:id="@+id/gmail"
            android:layout_weight=".1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_gmail"/>

        <ImageView
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:id="@+id/googleplay"
            android:layout_weight=".1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_googleplay"/>

        <ImageView
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:id="@+id/stackOverFlow"
            android:layout_weight=".1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_stack_overflow"/>

        <ImageView
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:id="@+id/github"
            android:layout_weight=".1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_github"/>
    </LinearLayout>

    <View
        android:layout_marginRight="@dimen/d_20dp"
        android:layout_marginLeft="@dimen/d_20dp"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"/>

    <TextView
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:id="@+id/opensource"
        android:padding="@dimen/d_20dp"
        android:gravity="left"
        android:textColor="@color/darkBlue"
        android:textSize="18sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Open Source Licenses"/>


</LinearLayout>
