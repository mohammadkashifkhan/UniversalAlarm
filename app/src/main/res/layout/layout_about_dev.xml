<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/ivAboutWidthHeight"
            android:layout_height="@dimen/ivAboutWidthHeight"
            android:layout_gravity="left"
            android:src="@mipmap/ic_launcher" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvVersion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/marginTopEndBottomStart"
                android:gravity="center"
                android:textColor="@color/primaryTextColor"
                android:textSize="@dimen/normalTextSize" />

            <TextView
                android:id="@+id/opensource"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/marginTopEndBottomStartLarge"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:gravity="left"
                android:text="Open Source Licenses"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/mediumTextSize" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/separatorHeight"
        android:background="@color/gray"/>

    <TextView
        android:id="@+id/madeWithLove"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/paddingAll"
        android:textColor="@color/secondaryTextColor"
        android:textSize="@dimen/normalTextSize" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivDevBlurryImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />

        <com.pkmmte.view.CircularImageView
            android:id="@+id/avatar"
            android:layout_width="@dimen/ivAboutWidthHeight"
            android:layout_height="@dimen/ivAboutWidthHeight"
            android:layout_gravity="center"
            android:layout_margin="@dimen/marginTopVeryLarge"
            android:scaleType="center"
            android:src="@drawable/ic_kashif"
            app:border="true"
            app:border_width="0.1dp" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/marginTopEndBottomStartLarge"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="1">

        <ImageView
            android:id="@+id/ivLinkedIn"
            android:layout_width="@dimen/ivAboutIconsWidthHeight"
            android:layout_height="@dimen/ivAboutIconsWidthHeight"
            android:layout_weight=".1"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:src="@drawable/ic_linkedin" />

        <ImageView
            android:id="@+id/ivGmail"
            android:layout_width="@dimen/ivAboutIconsWidthHeight"
            android:layout_height="@dimen/ivAboutIconsWidthHeight"
            android:layout_weight=".1"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:src="@drawable/ic_gmail" />

        <ImageView
            android:id="@+id/ivGooglePlay"
            android:layout_width="@dimen/ivAboutIconsWidthHeight"
            android:layout_height="@dimen/ivAboutIconsWidthHeight"
            android:layout_weight=".1"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:src="@drawable/ic_googleplay" />

        <ImageView
            android:id="@+id/ivStackOverFlow"
            android:layout_width="@dimen/ivAboutIconsWidthHeight"
            android:layout_height="@dimen/ivAboutIconsWidthHeight"
            android:layout_weight=".1"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:src="@drawable/ic_stack_overflow" />

        <ImageView
            android:id="@+id/ivGithub"
            android:layout_width="@dimen/ivAboutIconsWidthHeight"
            android:layout_height="@dimen/ivAboutIconsWidthHeight"
            android:layout_weight=".1"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:src="@drawable/ic_github" />
    </LinearLayout>

</LinearLayout>
