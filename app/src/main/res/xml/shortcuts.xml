<shortcuts xmlns:android="http://schemas.android.com/apk/res/android">

    <shortcut
        android:shortcutId="Add Time alarm"
        android:enabled="true"
        android:icon="@drawable/ic_shortcut_fab_time"
        android:shortcutShortLabel="@string/add_Time"
        android:shortcutLongLabel="@string/add_Time"
        android:shortcutDisabledMessage="@string/add_Time">
        <intent
            android:action="com.mdkashif.alarm.activities.home.time"
            android:targetPackage="com.mdkashif.alarm.activities.home"
            android:targetClass="com.mdkashif.alarm.activities.home.HomeActivity" />
        <categories android:name="android.shortcut.conversation" />
    </shortcut>

